<h3>Posts</h3>

<table class = "table">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th>Submitted on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= truncate(post.content) %></td>
    <td><%= post.created_at.strftime("%e, %b, %Y") %></td>
    <!--<td><%= link_to 'Show', post %></td>-->
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
