<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :subject %>
    <%= f.input :message, :rows => 5, :cols => 10 %>
    <%= f.input :join_mailing_list %>
  </div>
    <%= f.submit "Submit", :class => "btn btn-success", :style => "color:white;" %>
<% end %>
	