<%= form_for([@post, @post.comments.build]) do |f| %>

  <div class="field">
    <!--<i class="icon-user"></i>-->
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  
  <div class="field">
    <!--<i class="icon-comment"></i>-->
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 15, :cols => 100 %>
  </div>
  <div class="actions">
    <%= f.button "Submit", :class => 'btn btn-success' %>
  </div>
<% end %>