<div class="container-narrow">
    <h2><i class="icon-envelope-alt"></i> Contact</h2>
        <%= form_for @message, :url => contact_path do |form| %>
            <fieldset class="fields">
            <div class="field">
                <%= form.label :name %>
                <%= form.text_field :name, :placeholder => "Enter your name...", :autofocus => true %>
            </div>

            <div class="field">
                <%= form.label :email%>
                <%= form.text_field :email, :placeholder => "Enter your email..." %>
            </div>
            <div class="field">
                <%= form.label :subject %>
                <%= form.text_field :subject, :placeholder => "Your subject..." %>
            </div>

            <div class="field">
                <%= form.label :Message %>
                <%= form.text_area :body, :placeholder => "Your message..." %>
            </div>
            </fieldset>

            <fieldset class="actions">
            <%= form.submit "Send", :class => 'btn btn-success' %>
            </fieldset>
        <% end %>
</div>